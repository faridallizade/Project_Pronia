@using Project_Pronia.Models;
@model Categories;

<div class="container" style="margin-left:380px">

    <form asp-controller="Category" asp-action="Create" method="post">
    <div class="form-group" style="width: 500px">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter category name">
    </div>
        <button type="submit" class="btn btn-primary" style="margin-left:190px">Create</button>
</form>

</div>  